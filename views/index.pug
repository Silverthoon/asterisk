extends layout

block content
    //- 
        - const logError = error;
        - const notLogError = notLoggedIn; 
    div(class="d-flex justify-content-center bg-secondary")
        div(class="d-flex min-vh-100 col-4")
            div(class="container mt-5 align-self-center text-white")
                form(class="mx-4 px-5 py-3 rounded shadow" method="post" action="/login/connect")
                    img(src="/images/asteriskLogoOrange.png" class="rounded mx-auto d-block mt-5 mb-3" alt="Asterisk" width="115" height="20")
                    div(class="mb-4 text-center")
                        p(class="Montserrat-Bold") Connect to dashboard
                        hr
                    if error 
                        div(class="alert alert-danger alert-dismissible fade show" role="alert")
                            strong=error
                            button(type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close")
                    if notLoggedIn 
                        div(class="alert alert-warning alert-dismissible fade show" role="alert")
                            strong=notLoggedIn
                            button(type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close")
                    div(class="mb-5 px-3")
                        label(for="exampleInputEmail1" class="form-label Montserrat-Bold") User name :
                        input(type="text" class="form-control shadow" id="exampleInputEmail1" name="username")
                    div(class="mb-3 px-3")
                        label(for="exampleInputPassword1" class="form-label Montserrat-Bold") Password :
                        input(type="password" class="form-control shadow" id="exampleInputPassword1" name="password")
                    div(class="mt-3 mb-5 text-center px-3")
                        button(type="submit" class="btn bg-secondary Montserrat-Bold text-white mt-3 shadow") Connect

                